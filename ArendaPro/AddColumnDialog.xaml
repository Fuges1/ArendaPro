<Window x:Class="ArendaPro.AddColumnDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить столбец" Height="200" Width="300"
        WindowStartupLocation="CenterOwner">
    <StackPanel Margin="10">
        <TextBlock Text="Имя столбца:" />
        <TextBox x:Name="ColumnNameBox" Margin="0,5" />

        <TextBlock Text="Тип данных (например: text, integer, date):" />
        <TextBox x:Name="DataTypeBox" Margin="0,5" />

        <Button Content="Добавить" Click="AddButton_Click" Margin="0,10,0,0" />
    </StackPanel>
</Window>
