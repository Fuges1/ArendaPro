<Window x:Class="ArendaPro.RegisterUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Регистрация пользователя"
        Height="385" Width="380"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#FFF0F0F0">

    <Grid Margin="10">
        <!-- Два столбца: метки и поля -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120"/>
            <!-- ширина меток -->
            <ColumnDefinition Width="*"/>
            <!-- поля занимают всё остальное -->
        </Grid.ColumnDefinitions>


        <!-- Одиннадцать строк: 10 полей + кнопки -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- 0: Логин -->
            <RowDefinition Height="Auto"/>
            <!-- 1: Пароль -->
            <RowDefinition Height="Auto"/>
            <!-- 2: Роль -->
            <RowDefinition Height="Auto"/>
            <!-- 3: Фамилия -->
            <RowDefinition Height="Auto"/>
            <!-- 4: Имя -->
            <RowDefinition Height="Auto"/>
            <!-- 5: Отчество -->
            <RowDefinition Height="Auto"/>
            <!-- 6: Email -->
            <RowDefinition Height="Auto"/>
            <!-- 7: Паспорт -->
            <RowDefinition Height="Auto"/>
            <!-- 8: Кем выдан -->
            <RowDefinition Height="Auto"/>
            <!-- 9: Дата выдачи -->
            <RowDefinition Height="Auto"/>
            <!-- 10: Кнопки -->
        </Grid.RowDefinitions>

        <!-- 0: Логин -->
        <TextBlock Grid.Row="0" Grid.Column="0"
                   Text="Логин:" 
                   VerticalAlignment="Center" 
                   Margin="5"/>
        <TextBox   Grid.Row="0" Grid.Column="1"
                   x:Name="UsernameBox"
                   Margin="5"/>

        <!-- 1: Пароль -->
        <TextBlock Grid.Row="1" Grid.Column="0"
                   Text="Пароль:"
                   VerticalAlignment="Center"
                   Margin="5"/>
        <PasswordBox Grid.Row="1" Grid.Column="1"
                     x:Name="PasswordBox"
                     Margin="5"/>

        <!-- 2: Роль -->
        <TextBlock Grid.Row="2" Grid.Column="0"
                   Text="Роль:"
                   VerticalAlignment="Center"
                   Margin="5"/>
        <ComboBox Grid.Row="2" Grid.Column="1"
                  x:Name="RoleBox"
                  Margin="5">
            <ComboBoxItem Content="администратор"/>
            <ComboBoxItem Content="менеджер"/>
        </ComboBox>

        <!-- 3: Фамилия -->
        <TextBlock Grid.Row="3" Grid.Column="0"
                   Text="Фамилия:"
                   VerticalAlignment="Center"
                   Margin="5"/>
        <TextBox Grid.Row="3" Grid.Column="1"
                 x:Name="LastNameBox"
                 Margin="5"/>

        <!-- 4: Имя -->
        <TextBlock Grid.Row="4" Grid.Column="0"
                   Text="Имя:"
                   VerticalAlignment="Center"
                   Margin="5"/>
        <TextBox Grid.Row="4" Grid.Column="1"
                 x:Name="FirstNameBox"
                 Margin="5"/>

        <!-- 5: Отчество -->
        <TextBlock Grid.Row="5" Grid.Column="0"
                   Text="Отчество:"
                   VerticalAlignment="Center"
                   Margin="5"/>
        <TextBox Grid.Row="5" Grid.Column="1"
                 x:Name="MiddleNameBox"
                 Margin="5"/>

        <!-- 6: Email -->
        <TextBlock Grid.Row="6" Grid.Column="0"
                   Text="Email:"
                   VerticalAlignment="Center"
                   Margin="5"/>
        <TextBox Grid.Row="6" Grid.Column="1"
                 x:Name="EmailBox"
                 Margin="5"/>

        <!-- 7: Паспорт -->
        <TextBlock Grid.Row="7" Grid.Column="0"
                   Text="Паспорт:"
                   VerticalAlignment="Center"
                   Margin="5"/>
        <TextBox Grid.Row="7" Grid.Column="1"
                 x:Name="PassportBox"
                 Margin="5"/>

        <!-- 8: Кем выдан -->
        <TextBlock Grid.Row="8" Grid.Column="0"
                   Text="Кем выдан:"
                   VerticalAlignment="Center"
                   Margin="5"/>
        <TextBox Grid.Row="8" Grid.Column="1"
                 x:Name="PassportIssuedByBox"
                 Margin="5"/>

        <!-- 9: Дата выдачи -->
        <TextBlock Grid.Row="9" Grid.Column="0"
                   Text="Дата выдачи:"
                   VerticalAlignment="Center"
                   Margin="5"/>
        <DatePicker Grid.Row="9" Grid.Column="1"
                    x:Name="PassportIssueDatePicker"
                    Margin="5"/>

        <!-- 10: Кнопки Отмена и Зарегистрировать -->
        <StackPanel Grid.Row="10" Grid.Column="0" Grid.ColumnSpan="2"
                    Orientation="Horizontal" HorizontalAlignment="Right"
                    Margin="5">
            <Button Content="Отмена" Width="100" Margin="5,0"
                    Click="CancelButton_Click"/>
            <Button Content="Зарегистрировать" Width="150" Margin="5,0"
                    Click="RegisterButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
