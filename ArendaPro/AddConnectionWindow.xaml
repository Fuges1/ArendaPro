<Window x:Class="ArendaPro.AddConnectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить подключение" Height="300" Width="400">
    <StackPanel Margin="20">
        <TextBlock Text="Название:"/>
        <TextBox x:Name="NameBox" Margin="0,5"/>
        <TextBlock Text="Строка подключения:"/>
        <TextBox x:Name="ConnectionBox" Margin="0,5" Height="80" TextWrapping="Wrap"/>
        <Button Content="Добавить" Click="Add_Click" Margin="0,10"/>
    </StackPanel>
</Window>
