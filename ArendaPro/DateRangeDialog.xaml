<Window x:Class="ArendaPro.DateRangeDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Проверить доступность" Height="200" Width="300">
    <StackPanel Margin="10">
        <Label Content="Дата начала:"/>
        <DatePicker x:Name="StartDatePicker"/>

        <Label Content="Дата окончания:" Margin="0,10,0,0"/>
        <DatePicker x:Name="EndDatePicker"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="Отмена" Width="80" Margin="0,0,10,0" Click="CancelButton_Click"/>
            <Button Content="OK" Width="80" Click="OkButton_Click"/>
        
        </StackPanel>
    </StackPanel>
</Window>