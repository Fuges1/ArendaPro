<Window x:Class="ArendaPro.InputDialog"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Введите имя таблицы"
        Height="210" Width="300"
        WindowStartupLocation="CenterOwner">
    <StackPanel Margin="10">
        <TextBlock Text="Введите имя таблицы:" Margin="0,0,0,5"/>
        <TextBox x:Name="InputTextBox" Margin="0,0,0,10"/>
        <StackPanel Margin="10">
            <TextBlock Text="Имя таблицы (в БД):" />
            <TextBox x:Name="tableNameRealTextBox" />

            <TextBlock Text="Имя таблицы (для отображения):" Margin="0,10,0,0" />
            <TextBox x:Name="tableNameDisplayTextBox" />

            <Button Content="Создать таблицу" Click="Ok_Click" Margin="0,10,0,0" />
        </StackPanel>
    </StackPanel>
</Window>
